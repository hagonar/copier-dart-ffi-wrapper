// {{ package_name }} - Android FFI Plugin with pre-built native libraries
// Uses pre-built {{ lib_android }} from src/main/jniLibs/ (standard location)

group = "org.{{ package_name }}.{{ package_name }}"
version = "1.0"

buildscript {
    repositories {
        google()
        mavenCentral()
    }

    dependencies {
        classpath("com.android.tools.build:gradle:8.9.1")
    }
}

rootProject.allprojects {
    repositories {
        google()
        mavenCentral()
    }
}

apply plugin: "com.android.library"

android {
    namespace = "org.{{ package_name }}.{{ package_name }}"
    compileSdk = {{ android_compile_sdk }}

    compileOptions {
        sourceCompatibility = JavaVersion.VERSION_11
        targetCompatibility = JavaVersion.VERSION_11
    }

    defaultConfig {
        minSdk = {{ android_min_sdk }}
    }

    // Native libraries are in src/main/jniLibs/ (default location)
}
