Pod::Spec.new do |s|
  s.name             = '{{ package_name }}'
  s.version          = '1.0.0'
  s.summary          = '{{ description }}'
  s.description      = <<-DESC
{{ description }}
Native libraries are bundled automatically via Flutter's native assets system.
                       DESC
  s.homepage         = 'https://github.com/{{ github_repo }}'
  s.license          = { :file => '../LICENSE' }
  s.author           = { '{{ package_name }}' => 'dev@{{ package_name }}.org' }
  s.source           = { :path => '.' }

  s.source_files = 'Classes/**/*'

  s.dependency 'Flutter'
  s.platform = :ios, '12.0'
  s.swift_version = '5.0'
end
